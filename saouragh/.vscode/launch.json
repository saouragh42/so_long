{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug so_long",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/so_long",
            "args": ["maps/empty.ber"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug so_long (Custom Map)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/so_long",
            "args": ["${input:mapFile}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "inputs": [
        {
            "id": "mapFile",
            "description": "Enter the path to your map file",
            "default": "maps/empty.ber",
            "type": "promptString"
        }
    ]
}
